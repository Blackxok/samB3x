{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"noImplicitAny": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*.ts"]
}
